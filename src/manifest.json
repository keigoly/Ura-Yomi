{
  "manifest_version": 3,
  "name": "TubeInsight AI - YouTube Comment Analyzer",
  "version": "1.0.0",
  "description": "YouTube動画のコメントをAIで解析し、真の価値と本音を可視化する",
  "permissions": [
    "sidePanel",
    "storage",
    "tabs",
    "scripting",
    "identity"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://www.googleapis.com/youtube/v3/*",
    "https://generativelanguage.googleapis.com/*",
    "http://localhost:3000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
